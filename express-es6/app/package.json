{
  "name": "node-express-babel-boilerplate",
  "version": "1.0.0",
  "description": "Nodejs ES6",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist",
    "build": "cp -r ./src/public ./dist && babel src/ -d dist/",
    "dev": "nodemon --exec babel-node src"
  },
  "babel": {
    "presets": ["es2015", "stage-0"]
  },
  "license": "MIT",
  "dependencies": {
    "express": "^4.14.0"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "nodemon": "^1.11.0"
  }
}
